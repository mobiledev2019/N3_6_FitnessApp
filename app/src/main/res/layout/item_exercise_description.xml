<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp">
    <TextView
        android:id="@+id/tv_stt"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_50sdp"
        android:text="01"
        android:textStyle="bold"
        android:textSize="@dimen/_22ssp"
        android:textColor="#B3B0B0"
        android:gravity="center"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_exercise_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_stt"
        android:layout_marginRight="@dimen/_50sdp"
        android:text="Stand with your feet together and your hands at your sides"
        android:layout_centerVertical="true"
        android:textColor="#000"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D4D4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        />
</RelativeLayout>