<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_item_custom_workout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_15sdp"
    android:paddingRight="@dimen/_10sdp"
    >
    <ImageView
        android:id="@+id/img_item_custom_workout"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/pic_custom_myworkout"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_item_custom_workout"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/btn_right_item_exercise"
        android:layout_marginRight="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/tv_name_item_custom_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abc"
            android:textColor="#000"
            android:textStyle="bold"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/tv_detail_custom_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 mins â€¢ 44 calories"
            android:maxLines="1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_right_item_exercise"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_15sdp"
        android:background="@drawable/setting_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D8D4D4"
        android:layout_below="@+id/img_item_custom_workout"
        android:layout_marginTop="@dimen/_10sdp"
        />
</RelativeLayout>