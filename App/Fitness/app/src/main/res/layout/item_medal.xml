<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_nen1"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_125sdp"
        android:background="#696262"
        />

    <ImageView
        android:id="@+id/img_nen2"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_125sdp"
        android:background="#F0EAEA"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/img_nen3"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_125sdp"
        android:background="#C9B5B5"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/img_khung"
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_125sdp"
        android:background="@drawable/khung_item_medal"
        />
    <FrameLayout
        android:id="@+id/fr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageWallpaper"
            android:layout_width="@dimen/_96sdp"
            android:layout_height="@dimen/_96sdp"
            android:src="@drawable/ic_gold_medal"
            android:scaleType="centerInside"
            />
        <ImageView
            android:id="@+id/imageCheck"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_check"
            android:scaleType="fitXY"
            />
    </FrameLayout>
    <LinearLayout
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_25sdp"
        android:gravity="center"
        android:layout_below="@+id/fr1"
        android:layout_marginBottom="@dimen/_4sdp"
        >
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_coin"
            />
        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:text=" 2000"
            android:gravity="center_vertical"
            android:textColor="#FFAB00"
            android:textSize="@dimen/_13ssp"
            />
    </LinearLayout>
</RelativeLayout>
