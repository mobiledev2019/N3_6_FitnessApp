<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fr_item_workout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_3sdp"
    android:paddingLeft="@dimen/_3sdp"
    android:paddingRight="@dimen/_3sdp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_workout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:scaleType="fitXY"
                android:src="@drawable/img_7m_beginner" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv_workout_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7M BEGINNER"
                    android:textSize="@dimen/_25ssp"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_workout_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beginner • 7 mins • 28 calories "
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#fff"
                    android:layout_below="@+id/tv_workout_name"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>
