<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ln_workout_detail"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rl_1_workout_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/toolbar"
                    >
                </include>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_workout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:padding="@dimen/_10sdp"
                android:background="#EEECDD"
                android:layout_below="@+id/rl_1_workout_detail"
                android:gravity="center_horizontal"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_workout_description"
                >
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <View
        android:id="@+id/line"
        style="@style/line"
        android:layout_above="@+id/ln_workout_detail"
        android:layout_marginLeft="0dp"
        />

    <LinearLayout
        android:id="@+id/ln_workout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp">

        <Button
            android:id="@+id/btn_start_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrect_green"
            android:text="Start"
            android:textColor="#fff"
            />
    </LinearLayout>
</RelativeLayout>

